# Database
DATABASE_URL="mysql://username:password@localhost:3306/duetap_db"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here"

# App Environment
NODE_ENV="development"
PORT=3000

# Frontend URL for CORS
FRONTEND_URL="http://localhost:3001"

# Encryption Key for API Keys Storage
ENCRYPTION_KEY="your-32-character-encryption-key"

# Webhook Secrets
WHATSAPP_WEBHOOK_SECRET="your-whatsapp-webhook-secret"
RAZORPAY_WEBHOOK_SECRET="your-razorpay-webhook-secret"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Email Configuration (Global Defaults - can be overridden by client settings)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# WhatsApp Business API (Global Defaults)
WHATSAPP_API_URL="https://graph.facebook.com/v17.0"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_REQUESTS=100
